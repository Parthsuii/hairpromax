<!-- views/dashboard.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Progress Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 text-gray-800 p-8">
  <h1 class="text-3xl font-bold mb-4">Welcome, <%= username %></h1>
  <h2 class="text-xl font-semibold mb-4">Your Care Plan Progress</h2>
  <% if (alertMessage) { %>
    <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 rounded mb-4">
      <p><%= alertMessage %></p>
    </div>
  <% } %>
  
  <div class="bg-white rounded-lg shadow p-4">
    <% if (progress.length === 0) { %>
    <% } else { %>
      <ul>
        <% progress.forEach(p => { %>
          <li class="border-b py-2">
            <strong>Step <%= p.step %></strong>: <%= p.feedback %> <em>(<%= p.updatedAt.toDateString() %>)</em>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </div>
</body>
</html>
